<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garagedashboard"
    tools:context=".GarageDashBoard">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtViewTemp"
        android:layout_width="135dp"
        android:layout_height="127dp"
        android:layout_marginTop="28dp"
        android:text="30Â°"
        android:textSize="50dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtViewShopName"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:text="Sunil Mortors"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtViewTemp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGarageRequests"
        android:layout_width="120dp"
        android:layout_height="148dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="232dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtViewShopName" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpdateProfileGarage"
        android:layout_width="125dp"
        android:layout_height="140dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="232dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/btnGarageRequests"
        app:layout_constraintTop_toBottomOf="@id/txtViewShopName" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTask"
        android:layout_width="123dp"
        android:layout_height="143dp"
        android:layout_marginStart="52dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/btnGarageRequests"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="606dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPastRecords"
        android:layout_width="125dp"
        android:layout_height="143dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/btnTask"
        app:layout_constraintTop_toBottomOf="@id/btnUpdateProfileGarage" />


</androidx.constraintlayout.widget.ConstraintLayout>